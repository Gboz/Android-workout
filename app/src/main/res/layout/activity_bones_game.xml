<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_bones_game"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.grzegorz.androidworkout.BonesGameActivity">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.5">


        <Button
            android:text=""
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/playerButton" />

        <CheckBox
            android:text="___"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/cB1"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/playerButton"
            android:layout_toEndOf="@+id/playerButton"
            android:layout_marginLeft="67dp"
            android:layout_marginStart="67dp" />

        <CheckBox
            android:text="___"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/cB2"
            android:layout_marginTop="27dp"
            android:layout_below="@+id/cB1"
            android:layout_alignLeft="@+id/cB1"
            android:layout_alignStart="@+id/cB1" />

        <CheckBox
            android:text="___"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/cB3"
            android:layout_alignBaseline="@+id/playerButton"
            android:layout_alignBottom="@+id/playerButton"
            android:layout_alignLeft="@+id/cB2"
            android:layout_alignStart="@+id/cB2" />

        <CheckBox
            android:text="___"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/cB4"
            android:layout_below="@+id/cB3"
            android:layout_alignLeft="@+id/cB3"
            android:layout_alignStart="@+id/cB3"
            android:layout_marginTop="27dp" />

        <CheckBox
            android:text="___"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/cB5"
            android:layout_alignParentBottom="true"
            android:layout_alignLeft="@+id/cB4"
            android:layout_alignStart="@+id/cB4" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.5">

    </RelativeLayout>
</LinearLayout>
